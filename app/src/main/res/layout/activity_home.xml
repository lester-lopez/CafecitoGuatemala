<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    tools:context="lrlp.example.cafecito.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/f1"
        tools:context="lrlp.example.cafecito.Authlogin"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView86"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35dp"
                    android:text="MENÚ"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/emailtextView"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal"
                    android:text="Email"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <Button

                    android:id="@+id/t_cafe"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="243dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#FF9800"
                    android:text="Tipos de Café"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/t_e_button"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="45dp"
                    android:backgroundTint="#FFC107"
                    android:text="Tipos de Enfermedades"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/t_f111_button"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:backgroundTint="#FFEB3B"
                    android:text="tipos de fungicidas"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/t_a_n1_button"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:backgroundTint="#CDDC39"
                    android:text="Abonos Orgánicos"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/t_a_q1button3"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"

                    android:layout_marginBottom="70dp"
                    android:backgroundTint="#8BC34A"
                    android:text="Abonos Químicos"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/informacion_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#887D7D"
                    android:text="Información "
                    android:textAlignment="viewStart"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/info" />

                <Button
                    android:id="@+id/logOutButton"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#F44336"
                    android:text="Cerrar Sesión"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/serrarse" />

                <Button
                    android:id="@+id/bsalirapp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="#F44336"
                    android:text="Salir"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/salir" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>